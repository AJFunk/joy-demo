.container
  .row
    button.btn.btn-primary(ng-click='vm.toggleAddPost()' ng-hide='vm.addingPost') New Post
    .addingPost(ng-show='vm.addingPost')
      input(type='text' placeholder='Image URL' ng-model='vm.newPost.imageUrl')
      textarea(placeholder='Caption...' ng-model='vm.newPost.caption')
      button.btn.btn-primary(ng-click='vm.upload()') Save
      button.btn.btn-danger(ng-click='vm.toggleAddPost()') Cancel



.container
  .row
    .col-md-6
      img.avatar(ng-src='//api.adorable.io/avatar/75/{{vm.currentUser._id}}')
    .col-md-6
      h2 {{vm.currentUser.name}}

  .row
    .col-md-3(ng-repeat='post in vm.posts')
      .post
        img(ng-src='{{post.imageUrl}}')
        p {{post.caption}}
    div(ng-if='!vm.posts.length')
      h4 You have not added any posts!
